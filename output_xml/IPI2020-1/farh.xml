                <text value="где"/>
              </braces>
            </command>
            <formula id="id15" value="$a_i\hm\in GF(p)$"/>
            <text value=",$p$"/>
          </braces>
          <command value="\specialsymbol">
            <braces>
              <text value="~---"/>
            </braces>
          </command>
          <text value="простое число;"/>
          <formula id="id16" value="$\mathbf{e}_i$"/>
          <command value="\specialsymbol">
            <braces>
              <text value="~---"/>
            </braces>
          </command>
          <command value="\specialsymbol">
            <braces>
              <text value="~---"/>
