      <section id="id2">
        <braces>
          <text value="\section{}"/>
        </braces>
        <text value="Базовые понятия и определения"/>
        <command value="\vspace*">
          <braces>
            <braces>
              <text value="{}"/>
              <text value="-3pt"/>
            </braces>
          </braces>
          <braces/>
          <braces>
            <text value="Пусть заданы два множества:"/>
          </braces>
        </command>
        <formula id="id3" value="$\mathbf{U} \hm= \{a_1, a_2, \ldots, &#10;a_n\}$"/>
        <text value="и"/>
        <formula id="id4" value="$\boldsymbol{\Omega}\hm= \{O_1, O_2, \ldots, O_m\}\subseteq 2^{\mathbf{U}}\backslash &#10;\varnothing$"/>
        <text value=", первое из которых будем называть исходным алфавитом (множеством образующих элементов для анализируемых прецедентов из"/>
        <formula id="id5" value="$\Omega$"/>
        <command value="\specialsymbol">
          <braces>
            <text value="~---"/>
          </braces>
        </command>
        <text value="множеством описаний прецедентов (непустых множеств образующих), построенных над универсумом"/>
        <formula id="id6" value="$\mathbf{U}$"/>
        <text value=", т."/>
        <text value="е."/>
        <text value="над множеством объектов, построенных из образующих"/>
        <formula id="id7" value="$a_1, a_2, \ldots, &#10;a_n$"/>
        <text value=". Располагая множествами"/>
        <formula id="id8" value="$\mathbf{U}$"/>
        <text value="и"/>
        <formula id="id9" value="$\boldsymbol{\Omega}$"/>
        <text value=", определим два отображения$f$и"/>
        <formula id="id10" value="$\varphi$"/>
        <text value=":"/>
        <itemize/>
        <text value="где"/>
        <formula id="id11" value="$\mathbf{2}^{\mathbf{U}}$"/>
        <command value="\specialsymbol">
          <braces>
            <text value="~---"/>
          </braces>
        </command>
        <text value="множество всех подмножеств множества"/>
        <formula id="id12" value="$\mathbf{U}$"/>
        <text value="(исходного алфавита), а"/>
        <formula id="id13" value="$\mathbf{2}^{\boldsymbol{\Omega}}$"/>
        <command value="\specialsymbol">
          <braces>
            <text value="~---"/>
          </braces>
        </command>
        <text value="множество всех подмножеств множества"/>
        <formula id="id14" value="$\boldsymbol{\Omega}$"/>
        <text value="(множества описаний прецедентов). Можно показать, что пара отображений"/>
        <formula id="id15" value="$\langlef,\varphi\rangle$"/>
        <text value="представляет собой соответствие Галуа (см., например,"/>
        <text value="5"/>
        <text value="), а их произведения"/>
        <formula id="id16" value="$f(\varphi(\zeta))$"/>
        <text value="и"/>
        <formula id="id17" value="$\varphi (f(\zeta))$"/>
        <command value="\specialsymbol">
          <braces>
            <text value="~---"/>
          </braces>
        </command>
        <text value="соответствующие замыкания Галуа (см., например,"/>
        <text value="5"/>
        <text value="), которые будем обозначать как"/>
        <formula id="id18" value="$[\_]_{\mathbf{U},\boldsymbol{\Omega}}$"/>
        <text value="и"/>
        <formula id="id19" value="$[\_]_{\boldsymbol{\Omega},\mathbf{U}}$"/>
        <text value="."/>
        <command value="\smallskip">
          <braces>
            <text value="\smallskip"/>
          </braces>
