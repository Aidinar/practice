        <subsection>
          <text value="Случайные функции"/>
          <text value="Пусть$X$и$Y$"/>
          <command value="\specialsymbol">
            <braces>
              <text value="~---"/>
            </braces>
          </command>
          <text value="два конечных множества."/>
          <braces>
            <text value="{}"/>
            <command value="\bf">
              <braces>
                <text value="Случайной функцией"/>
              </braces>
              <braces/>
              <braces>
                <text value="(СФ) из$X$в$Y$называется произвольная функция$f$вида"/>
              </braces>
            </command>
            <command value="\be">
              <braces>
                <braces>
                  <text value="{}"/>
                  <text value="dfgfdsgfds"/>
                </braces>
              </braces>
              <braces/>
              <braces>
                <text value="f: X"/>
              </braces>
            </command>
            <command value="\times">
              <braces>
                <text value="Y"/>
              </braces>
            </command>
            <command value="\to">
              <braces/>
              <braces>
                <text value="0,1"/>
              </braces>
              <braces/>
            </command>
            <command value="\ee">
              <braces>
                <text value="такая, что"/>
              </braces>
            </command>
            <formula id="id10" value="$\forall\,x\hm\in X\quad \sum\limits_{y\in Y}f(x,y)\hm=1$"/>
            <text value=". Для любых"/>
            <formula id="id11" value="$x\in X$"/>
            <text value="и"/>
